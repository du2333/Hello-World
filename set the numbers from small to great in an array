\\Assume there is an array contains n elements of integer numbers

#include<iostream>
using namespace std;

void main()
{
   int n;
   cout<<"Please enter the size of the array"<<endl;
   cin>>n;
   int num[n];
   for(int i=0;i<n,i++)
   {
      cin>>num[i];
   }
   cout<<"The array before reranged "<<num[n]<<endl;        \\Display the array the user just entered.
   
   for(int i=0;i<n;i++)
   {
      int swap;
      if(x[i]>x[i+1])
      {
         swap=x[i];
         x[i]=x[i+1];
         x[x+1]=swap;
      }
    }                                                       \\Do a comparison among the numbers
    cout<<"The array after reranged "<<num[n]<<endl;
}    
