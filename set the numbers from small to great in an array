//Assume there is an array contains n elements of integer numbers

#include<iostream>
using namespace std;

int main()
{
   int n;
   cout<<"Please enter the size of the array"<<endl;
   cin>>n;
   int num[n];
   
   for(int i=0;i<n;i++)
   {
      cout<<"enter index "<<i<<endl;
      cin>>num[i];
   }
   cout<<"The array before reranged "<<endl;  //Display the array the user just entered.
   for(int i=0;i<n;i++)
   {
       cout<<num[i]<<" ";
   }
   cout<<endl;
   
   for(int i=0;i-1<n;i++)
   {
      int swap;
      if(num[i]>num[i+1])
      {
         swap=num[i];
         num[i]=num[i+1];
         num[i+1]=swap;
      }
    }                                                       //Do a comparison among the numbers
    cout<<"The array after reranged "<<endl;
    for(int i=0;i<n;i++)
   {
       cout<<num[i]<<" ";
   }
} 
